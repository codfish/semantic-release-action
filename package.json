{
  "name": "semantic-release-action",
  "version": "0.0.0-semantically-released",
  "description": "GitHub action runs `semantic-release`. Respects .releaserc.js in your repo. Exports version variables for you to use in subsequent actions.",
  "homepage": "https://github.com/codfish/semantic-release-action",
  "author": {
    "name": "Chris O'Donnell",
    "email": "dev@codfish.io",
    "url": "https://codfish.io"
  },
  "main": "README.md",
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.0.0",
    "semantic-release": "^15.13.28"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "eslint": "^5.16.0",
    "eslint-config-codfish": "^2.5.0",
    "husky": "^1.3.1",
    "jest": "^24.9.0",
    "lint-staged": "^10.0.1",
    "markdownlint-cli": "^0.18.0",
    "prettier": "^1.18.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codfish/semantic-release-action.git"
  },
  "scripts": {
    "format": "prettier --write \"**/*.{json,css,scss,md,html}\" && npm run lint -- --fix",
    "lint": "eslint .",
    "lint:md": "markdownlint -i node_modules -i dist ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{json,css,scss,html}": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "codfish"
    ],
    "root": true,
    "rules": {
      "no-console": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100,
    "proseWrap": "always"
  },
  "release": {
    "branch": "master",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
